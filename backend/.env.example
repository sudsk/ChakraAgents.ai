# Backend environment variables

# Application settings
APP_NAME="Agentic AI Service"
DEBUG=false
ENVIRONMENT=production

# Database connection
DATABASE_URL=postgresql://postgres:password@db:5432/agentic_ai
#ASYNC_DATABASE_URL=postgresql+asyncpg://postgres:password@db:5432/agentic_ai

# Authentication
SECRET_KEY=your-secret-key-here  # Change this to a secure random string!
ACCESS_TOKEN_EXPIRE_MINUTES=60
ALGORITHM=HS256

# CORS settings
CORS_ORIGINS=https://yourdomain.com,http://localhost:3000

# LLM API credentials
VERTEX_AI_PROJECT_ID=your-gcp-project-id
VERTEX_AI_LOCATION=us-central1

OPENAI_API_KEY=your-openai-api-key

ANTHROPIC_API_KEY=your-anthropic-api-key

# Storage
CHECKPOINT_DIR=./checkpoints

# Logging
LOG_LEVEL=info

# Tool settings
ENABLE_WEB_SEARCH=true
WEB_SEARCH_API_KEY=your-search-api-key
